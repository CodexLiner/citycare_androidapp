<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpUsage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rel_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rel_doctor"
            android:layout_marginBottom="10dp">

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/rel_doctor"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_above="@+id/rel_pharmacy"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/q3">

            <ImageView

                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="15dp"
                android:layout_width="388dp"
                android:layout_height="133dp"
                android:background="@drawable/rip" />

            <TextView
                android:id="@+id/txt_doctorname"
                android:layout_width="161dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="25dp"
                android:gravity="start"
                android:text="@string/doctor"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_doctordesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_doctorname"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="10dp"

                android:gravity="start"
                android:maxLines="1"
                android:text="@string/txt_doctor"
                android:textColor="#000000"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_pharmacy"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_above="@+id/rel_hospital"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/q1">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="15dp"
                android:layout_width="388dp"
                android:layout_height="133dp"
                android:background="@drawable/rip" />

            <TextView

                android:id="@+id/txt_pharmacyname"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="25dp"
                android:gravity="start"
                android:text="@string/pharmany"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView

                android:id="@+id/txt_pharmacydesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_pharmacyname"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="100dp"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/txt_pharmacies"
                android:textColor="#000000"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_hospital"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/q">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="15dp"
                android:layout_width="388dp"
                android:layout_height="133dp"
                android:background="@drawable/rip" />

            <TextView

                android:id="@+id/txt_hospitalname"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="25dp"
                android:gravity="start"
                android:text="@string/hospital"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView

                android:id="@+id/txt_hospitaldesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_hospitalname"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="70dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:gravity="start"
                android:maxLines="3"
                android:text="@string/txt_hospitals"
                android:textColor="#000000"
                android:textSize="15dp" />
        </RelativeLayout>

        <ImageView
            android:background="?attr/selectableItemBackground"
            android:id="@+id/img_circle_icon"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="#51596A"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FAFDFD"
            android:gravity="center"
            android:text=""
            android:textColor="#51596A"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:gravity="center_vertical">

            <com.Cityapp.utils.RoundedImageView
                android:background="?attr/selectableItemBackground"
                android:id="@+id/img_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="20dp"
                 />

            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/img_profile"
                android:layout_toRightOf="@+id/img_profile"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/profile_txt"
                android:textColor="#000000"
                android:textSize="0dp" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_profile"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/img_profile"
                android:layout_toRightOf="@+id/img_profile"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="monospace"
                android:maxLines="1"
                android:text="@string/sign_in_txt"
                android:textColor="#000000"
                android:textSize="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:id="@+id/ll_homen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/home1"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_favorite"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:maxLines="1"

                android:text="@string/home_txt"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:id="@+id/ll_fav"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">
            <!--<ImageView-->
            <!--android:layout_width="17dp"-->
            <!--android:layout_height="17dp"-->

            <!--android:layout_marginLeft="15dp"/>-->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/rate1"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_about"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:maxLines="1"

                android:text="@string/favorites_txt"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:id="@+id/ll_terms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:maxLines="1"
                android:layout_marginStart="30dp"
                android:background="@drawable/about1"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_terms"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:maxLines="1"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="@string/about_us_txt"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:id="@+id/ll_social"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/share1"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_terms1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="@string/social_sharing_txt"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:id="@+id/ll_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/setting1"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_cart"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:maxLines="1"
                android:gravity="center"
                android:text="@string/settings_txt"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_gravity="center|bottom"
                android:background="?attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:maxLines="1"
                android:text="logout"
                android:fontFamily="@font/acme"
                android:textSize="20dp"
                android:textColor="@color/colorheader"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>


